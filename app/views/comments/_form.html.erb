<!-- funcao para show-->
<div class="card my-4">
  <h5 class="card-header">Deixe um comentário:</h5>
    <div class="card-body">
      <div class="form-group">
        <%= form_with(model: [ @article, @article.comments.build ]) do |form| %>
          <div class="form-group">
            <p>
              <%= form.label :Nome %><br>
              <%= form.text_field :commenter, class:"form-control"  %>
            </p>
            <p>
              <%= form.label :Comentário %><br>
              <%= form.text_area :body, class:"form-control" %>
            </p>
          </div>
          <p>
            <%= form.submit 'Enviar comentário', class:"btn btn-primary" %>
          </p>
        <% end %> 
      </div>
    </div>
</div>
