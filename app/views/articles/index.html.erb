<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h2 class="my-4">Receitas do dia</h2>
      <% @articles.each do |article| %>
        <div class="card mb-4">
          <img class="card-img-top" src="https://1z5jae2n0j263mpko2pt22bi-wpengine.netdna-ssl.com/ubatuba/wp-content/uploads/sites/12/2017/03/bobo-de-camarao-novo.jpg" alt="Card image cap">
          <div class="card-body">
            <h2 class="card-title"><%= article.title %></h2>
            <p class="card-text"><%= article.text %></p>
            <%= link_to 'Leia mais', article_path(article), class:"btn btn-primary" %>
            <%= link_to 'Editar', edit_article_path(article), class:"btn btn-primary"  %>
            <%= link_to 'Deletar', article_path(article), class:"btn btn-primary", 
                            method: :delete,
                            data: { confirm: 'Você tem certeza?' } %>
          </div>
          <div class="card-footer text-muted">
              Postado em  23 de Fevereiro de 2018 por  
              <a href="#">Paula Silveira</a>
          </div>
        </div>
      <% end %>
    </div>
    <!-- Sidebar Widgets Column -->
    <div class="col-md-4">
      <!-- Search Widget -->
      <div class="card my-4">
        <h5 class="card-header">Busca</h5>
        <div class="card-body">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Busque por...">
            <span class="input-group-btn">
              <button class="btn btn-secondary" type="button">Ir!</button>
            </span>
          </div>
        </div>
      </div>
      <!-- Categories Widget -->
      <div class="card my-4">
        <h5 class="card-header">Veja também</h5>
        <div class="card-body">
          <div class="row">
            <div class="col-lg-6">
              <ul class="list-unstyled mb-0">
                <li>
                  <a href="#">Entradas</a>
                </li>
                <li>
                  <a href="#">Pratos principais</a>
                </li>
                <li>
                  <a href="#">Sobremesas</a>
                </li>
              </ul>
            </div>
            <div class="col-lg-6">
              <ul class="list-unstyled mb-0">
                <li>
                  <a href="#">Saladas</a>
                </li>
                <li>
                  <a href="#">Carnes</a>
                </li>
                <li>
                  <a href="#">Doces</a>
                </li>
              </ul>
            </div>
          </div>
        </div>

      </div>

    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-8">
      <ul class="pagination justify-content-center">
        <li class="page-item">
          <%= will_paginate @articles, :page_links => false, :previous_label => "Anterior", :next_label => "Próximo", :class => 'page-link' %>
        </li>
      </ul>
    </div>
  </div>
</div>


<footer class="py-5 bg-dark">
  <div class="container">
    <p class="m-0 text-center text-white"></p>
  </div>
</footer>